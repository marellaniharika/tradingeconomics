@using TradingEconomicsApp.Models
@model List<GdpData>

<div class="container">
    <h1>Compare GDP of Two Countries</h1>
    <form asp-action="Compare" method="post">
        <div class="form-group">
            <label for="country1">Country 1:</label>
            <input type="text" class="form-control" id="country1" name="country1" required>
        </div>
        <div class="form-group">
            <label for="country2">Country 2:</label>
            <input type="text" class="form-control" id="country2" name="country2" required>
        </div>
        <button type="submit" class="btn btn-primary">Compare</button>
    </form>

    @if (ViewBag.Data1 != null && ViewBag.Data2 != null)
    {
        <h2>@ViewBag.Country1 vs @ViewBag.Country2</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>@ViewBag.Country1 GDP</th>
                    <th>@ViewBag.Country2 GDP</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.Data1.Count; i++)
                {
                    <tr>
                        <td>@ViewBag.Data1[i].DateTime</td>
                        <td>@ViewBag.Data1[i].Value</td>
                        <td>@ViewBag.Data2[i].Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>